# Server Configuration
PORT=3000
NODE_ENV=development

# CORS Configuration (comma-separated list of allowed origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:19006,exp://192.168.1.100:19000,http://10.103.30.198:8081,exp://10.103.30.198:8081

# PostgreSQL Database (MCP Architecture)
DATABASE_URL=postgresql://localhost/vibe_app

# Google Maps & Places API (DEPRECATED - being removed)
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# Default Location Settings (for fallback)
DEFAULT_CITY="Bucharest, Romania"
DEFAULT_LOCATION_ID="294458"

# Supabase Configuration (for future use)
SUPABASE_URL=your_supabase_url_here
SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Security Settings
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=300
AUTH_RATE_LIMIT_MAX=50
EXTERNAL_API_RATE_LIMIT_MAX=60

# Logging
LOG_LEVEL=info

# LLM Provider Configuration
LLM_PROVIDER=claude
LLM_MODEL=claude-3-haiku-20240307
LLM_TIMEOUT_MS=15000

# Claude API
CLAUDE_API_KEY=your_claude_api_key_here

# Optional fallbacks
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini

# Media & Enrichment APIs (DEPRECATED - transitioning to curated dataset)
# YouTube uses the existing GOOGLE_MAPS_API_KEY
TAVILY_API_KEY=tvly_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Feature Flags (optional - defaults to true) (DEPRECATED)
ENABLE_YOUTUBE=false
ENABLE_TAVILY=false
ENABLE_WIKIPEDIA=false
